{% comment %}
  Section: Beauty Accessories Brush Set
  Description: Luxury makeup brush set showcase with elegant display and product details.
{% endcomment %}
<div class="dawn-brush-set-section" data-section-id="{{ section.id }}">
  <div class="brush-set-hero" style="background: linear-gradient(135deg, {{ section.settings.bg_color_start }}, {{ section.settings.bg_color_end }});">
    <div class="brush-set-content">
      {% if section.settings.show_icon %}
        <div class="brush-set-icon">{% render 'dawn-icon-brush' %}</div>
      {% endif %}
      <h2 class="brush-set-title">{{ section.settings.title }}</h2>
      <p class="brush-set-tagline">{{ section.settings.tagline }}</p>
      
      <div class="brush-set-showcase">
        {% for brush in section.settings.brushes %}
          <div class="brush-item" style="background: {{ brush.color }};">
            <img src="{{ brush.image | img_url: '300x300' }}" alt="{{ brush.name }}" class="brush-image">
            <h3 class="brush-name">{{ brush.name }}</h3>
            <p class="brush-purpose">{{ brush.purpose }}</p>
          </div>
        {% endfor %}
      </div>
      
      <div class="brush-set-features">
        {% for feature in section.settings.features %}
          <div class="feature-item">
            <span class="feature-icon">{{ feature.icon }}</span>
            <span class="feature-text">{{ feature.text }}</span>
          </div>
        {% endfor %}
      </div>
      
      <p class="brush-set-description">{{ section.settings.description }}</p>
      <a href="{{ section.settings.cta_link }}" class="dawn-button dawn-button-gold">{{ section.settings.cta_text }}</a>
    </div>
  </div>
</div>

<style>
.dawn-brush-set-section {
  position: relative;
  overflow: hidden;
}
.brush-set-hero {
  min-height: 70vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 2rem;
}
.brush-set-content {
  max-width: 900px;
  text-align: center;
  color: {{ section.settings.text_color }};
}
.brush-set-icon {
  margin-bottom: 1.5rem;
}
.brush-set-icon svg {
  width: 48px;
  height: 48px;
  stroke: #D4AF37;
}
.brush-set-title {
  font-family: 'Playfair Display', serif;
  font-size: 3rem;
  margin-bottom: 1rem;
  color: {{ section.settings.title_color }};
}
.brush-set-tagline {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  font-weight: 300;
  letter-spacing: 0.05em;
}
.brush-set-showcase {
  display: flex;
  justify-content: center;
  gap: 1.5rem;
  margin: 2rem 0;
  flex-wrap: wrap;
}
.brush-item {
  width: 100px;
  height: 160px;
  border-radius: 12px;
  padding: 0.75rem;
  box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  transition: transform 0.3s ease;
}
.brush-item:hover {
  transform: translateY(-5px);
}
.brush-image {
  width: 100%;
  height: 100px;
  object-fit: contain;
  margin-bottom: 0.3rem;
}
.brush-name {
  font-size: 0.7rem;
  font-weight: 600;
  margin-bottom: 0.2rem;
}
.brush-purpose {
  font-size: 0.6rem;
  opacity: 0.8;
}
.brush-set-features {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin: 2rem 0;
  flex-wrap: wrap;
}
.feature-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
}
.feature-icon {
  font-size: 1.2rem;
}
.brush-set-description {
  font-size: 1rem;
  line-height: 1.7;
  margin: 2rem 0;
  opacity: 0.9;
}

@media (max-width: 768px) {
  .brush-set-title { font-size: 2rem; }
  .brush-item { width: 80px; height: 130px; }
}
</style>

