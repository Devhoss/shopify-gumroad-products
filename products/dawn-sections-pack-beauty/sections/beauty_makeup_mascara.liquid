{% comment %}
  Section: Beauty Makeup Mascara
  Description: Luxury mascara showcase with gradient background and product carousel.
{% endcomment %}
<div class="dawn-mascara-section" data-section-id="{{ section.id }}">
  <div class="mascara-hero" style="background: linear-gradient(135deg, {{ section.settings.bg_color_start }}, {{ section.settings.bg_color_end }});">
    <div class="mascara-content">
      {% if section.settings.show_icon %}
        <div class="mascara-icon">{% render 'dawn-icon-mascara' %}</div>
      {% endif %}
      <h2 class="mascara-title">{{ section.settings.title }}</h2>
      <p class="mascara-tagline">{{ section.settings.tagline }}</p>
      
      <div class="mascara-carousel">
        {% for product in section.settings.products %}
          <div class="mascara-product" style="background: {{ product.color }};">
            <img src="{{ product.image | img_url: '400x400' }}" alt="{{ product.name }}" class="mascara-image">
            <h3 class="mascara-product-name">{{ product.name }}</h3>
            <p class="mascara-product-length">{{ product.length }}</p>
            <p class="mascara-product-finish">{{ product.finish }}</p>
          </div>
        {% endfor %}
      </div>
      
      <p class="mascara-description">{{ section.settings.description }}</p>
      <a href="{{ section.settings.cta_link }}" class="dawn-button dawn-button-gold">{{ section.settings.cta_text }}</a>
    </div>
  </div>
</div>

<style>
.dawn-mascara-section {
  position: relative;
  overflow: hidden;
}
.mascara-hero {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 2rem;
}
.mascara-content {
  max-width: 800px;
  text-align: center;
  color: {{ section.settings.text_color }};
}
.mascara-icon {
  margin-bottom: 1.5rem;
}
.mascara-icon svg {
  width: 48px;
  height: 48px;
  stroke: #D4AF37;
}
.mascara-title {
  font-family: 'Playfair Display', serif;
  font-size: 3rem;
  margin-bottom: 1rem;
  color: {{ section.settings.title_color }};
}
.mascara-tagline {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  font-weight: 300;
  letter-spacing: 0.05em;
}
.mascara-carousel {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin: 2rem 0;
  flex-wrap: wrap;
}
.mascara-product {
  width: 120px;
  height: 200px;
  border-radius: 12px;
  padding: 1rem;
  box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  transition: transform 0.3s ease;
}
.mascara-product:hover {
  transform: translateY(-5px);
}
.mascara-image {
  width: 100%;
  height: 120px;
  object-fit: contain;
  margin-bottom: 0.5rem;
}
.mascara-product-name {
  font-size: 0.8rem;
  font-weight: 600;
  margin-bottom: 0.2rem;
}
.mascara-product-length {
  font-size: 0.7rem;
  opacity: 0.8;
  margin-bottom: 0.2rem;
}
.mascara-product-finish {
  font-size: 0.7rem;
  opacity: 0.8;
}
.mascara-description {
  font-size: 1rem;
  line-height: 1.7;
  margin: 2rem 0;
  opacity: 0.9;
}

@media (max-width: 768px) {
  .mascara-title { font-size: 2rem; }
  .mascara-carousel { gap: 1rem; }
  .mascara-product { width: 100px; height: 160px; }
}
</style>

{% schema %}
{
  "name": "Mascara Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Velvet Mascara Collection"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Effortless Elegance"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our signature mascara collection, blending luxury with effortless elegance. Each formula is crafted for all-day wear and flawless lashes."
    },
    {
      "type": "color",
      "id": "bg_color_start",
      "label": "Background Gradient Start",
      "default": "#1A1A3A"
    },
    {
      "type": "color",
      "id": "bg_color_end",
      "label": "Background Gradient End",
      "default": "#2A2A5A"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#F9F9F9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#E8E0D8"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show mascara icon",
      "default": true
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "array",
      "id": "products",
      "label": "Mascara Products",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "text",
            "label": "Product Name"
          },
          "color": {
            "type": "color",
            "label": "Color"
          },
          "length": {
            "type": "text",
            "label": "Length"
          },
          "finish": {
            "type": "text",
            "label": "Finish"
          },
          "image": {
            "type": "image_picker",
            "label": "Product Image"
          }
        },
        "min_items": 3,
        "max_items": 6
      },
      "default": [
        {
          "name": "Velvet Velvet",
          "color": "#D4AF37",
          "length": "Classic",
          "finish": "Voluminous",
          "image": ""
        },
        {
          "name": "Midnight Rose",
          "color": "#8B4A6B",
          "length": "Long",
          "finish": "Wet Look",
          "image": ""
        },
        {
          "name": "Sunset Blush",
          "color": "#FF8A65",
          "length": "Medium",
          "finish": "Natural",
          "image": ""
        }
      ]
    }
  ]
}
{% endschema %}