{% comment %}
  Section: Beauty Accessories
  Description: Hero section for accessories product line with background image, title, tagline, CTA.
{% endcomment %}
<div class="dawn-accessories-section" style="background-color:#F9F9F9;">
  <style>
    .dawn-accessories-section { position:relative; overflow:hidden; font-family:Arial,Helvetica,sans-serif; }
    .dawn-accessories-section .hero-image { background-size:cover; background-position:center; height:60vh; }
    .dawn-accessories-section .hero-content { position:absolute; top:50%; left:50%; transform:translate(-50%,-50%); text-align:center; color:#0A0A2A; }
    .dawn-accessories-section .hero-title { font-size:2.5rem; margin:0; }
    .dawn-accessories-section .hero-tagline { font-size:1.2rem; margin:0.5rem 0; }
    .dawn-accessories-section .btn-primary { display:inline-block; padding:0.75rem 1.5rem; background:#D4AF37; color:#0A0A2A; text-decoration:none; border-radius:4px; font-weight:bold; }
    @media (max-width:768px) { .dawn-accessories-section .hero-title { font-size:2rem; } .dawn-accessories-section .hero-tagline { font-size:1rem; } }
    @media (max-width:480px) { .dawn-accessories-section .hero-title { font-size:1.6rem; } .dawn-accessories-section .hero-tagline { font-size:0.9rem; } }
  </style>
  <div class="hero-image" style="background-image: url('{{ section.settings.hero_image | img_url: '2048x2048' }}');"></div>
  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.title }}</h1>
    <p class="hero-tagline">{{ section.settings.tagline }}</p>
    <a href="{{ section.settings.cta_link }}" class="btn-primary">{{ section.settings.cta_text }}</a>
  </div>
</div>
{% schema %}
{
  "name": "Beauty Accessories Hero",
  "settings": [
    { "type": "image_picker", "id": "hero_image", "label": "Hero background image" },
    { "type": "text", "id": "title", "label": "Title", "default": "Silk Accessories" },
    { "type": "text", "id": "tagline", "label": "Tagline", "default": "Elegant finishing touches" },
    { "type": "url", "id": "cta_link", "label": "CTA button link", "default": "/collections/silk-accessories" },
    { "type": "text", "id": "cta_text", "label": "CTA button text", "default": "Shop Now" }
  ]
}
{% endschema %}
