{% comment %}
  Section: Example Section
{% endcomment %}

<div class="example-section" data-section-id="{{ section.id }}">
  {% for block in section.blocks %}
    <div class="item" style="background: {{ block.settings.color }};" {{ block.shopify_attributes }}>
      {% if block.settings.image != blank %}
        <img
          src="{{ block.settings.image | image_url: width: 300 }}"
          alt="{{ block.settings.title | escape }}"
          class="item-image"
          loading="lazy"
        >
      {% endif %}

      {% if block.settings.title != blank %}
        <h3 class="item-title">{{ block.settings.title }}</h3>
      {% endif %}

      {% if block.settings.text != blank %}
        <p class="item-text">{{ block.settings.text }}</p>
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
  .example-section { padding: 2rem; }
  .item { padding: 1rem; margin: .5rem; border-radius: .5rem; }
</style>

{% schema %}
{
  "name": "Example Section",
  "settings": [],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Item Title" },
        { "type": "textarea", "id": "text", "label": "Text", "default": "Description" },
        { "type": "color", "id": "color", "label": "Background Color", "default": "#FFFFFF" },
        { "type": "image_picker", "id": "image", "label": "Image" }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Example Section",
      "category": "Beauty",
      "blocks": [
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}
