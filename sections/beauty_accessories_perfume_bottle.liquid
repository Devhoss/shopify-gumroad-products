{% comment %}
  Section: Beauty Accessories Perfume Bottle
  Description: Luxury perfume bottle showcase with gradient background and product carousel.
{% endcomment %}
<div class="dawn-perfume-bottle-section" data-section-id="{{ section.id }}">
  <div class="perfume-bottle-hero" style="background: linear-gradient(135deg, {{ section.settings.bg_color_start }}, {{ section.settings.bg_color_end }});">
    <div class="perfume-bottle-content">
      {% if section.settings.show_icon %}
        <div class="perfume-bottle-icon">{% render 'dawn-icon-perfume' %}</div>
      {% endif %}
      <h2 class="perfume-bottle-title">{{ section.settings.title }}</h2>
      <p class="perfume-bottle-tagline">{{ section.settings.tagline }}</p>
      
      <div class="perfume-bottle-carousel">
        {% for product in section.settings.products %}
          <div class="perfume-bottle-product">
            <img src="{{ product.image | img_url: '400x400' }}" alt="{{ product.name }}" class="perfume-bottle-image">
            <h3 class="perfume-bottle-name">{{ product.name }}</h3>
            <p class="perfume-bottle-description">{{ product.description }}</p>
            <p class="perfume-bottle-scent">{{ product.scent }}</p>
          </div>
        {% endfor %}
      </div>
      
      <p class="perfume-bottle-description-text">{{ section.settings.description }}</p>
      <a href="{{ section.settings.cta_link }}" class="dawn-button dawn-button-gold">{{ section.settings.cta_text }}</a>
    </div>
  </div>
</div>

<style>
.dawn-perfume-bottle-section {
  position: relative;
  overflow: hidden;
}
.perfume-bottle-hero {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 2rem;
}
.perfume-bottle-content {
  max-width: 800px;
  text-align: center;
  color: {{ section.settings.text_color }};
}
.perfume-bottle-icon {
  margin-bottom: 1.5rem;
}
.perfume-bottle-icon svg {
  width: 48px;
  height: 48px;
  stroke: #D4AF37;
}
.perfume-bottle-title {
  font-family: 'Playfair Display', serif;
  font-size: 3rem;
  margin-bottom: 1rem;
  color: {{ section.settings.title_color }};
}
.perfume-bottle-tagline {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  font-weight: 300;
  letter-spacing: 0.05em;
}
.perfume-bottle-carousel {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin: 2rem 0;
  flex-wrap: wrap;
}
.perfume-bottle-product {
  width: 120px;
  height: 200px;
  border-radius: 12px;
  padding: 1rem;
  box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  transition: transform 0.3s ease;
}
.perfume-bottle-product:hover {
  transform: translateY(-5px);
}
.perfume-bottle-image {
  width: 100%;
  height: 140px;
  object-fit: contain;
  margin-bottom: 0.5rem;
}
.perfume-bottle-name {
  font-size: 0.8rem;
  font-weight: 600;
  margin-bottom: 0.3rem;
}
.perfume-bottle-description {
  font-size: 0.7rem;
  opacity: 0.8;
  margin-bottom: 0.3rem;
}
.perfume-bottle-scent {
  font-size: 0.7rem;
  opacity: 0.8;
}
.perfume-bottle-description-text {
  font-size: 1rem;
  line-height: 1.7;
  margin: 2rem 0;
  opacity: 0.9;
}

@media (max-width: 768px) {
  .perfume-bottle-title { font-size: 2rem; }
  .perfume-bottle-carousel { gap: 1rem; }
  .perfume-bottle-product { width: 100px; height: 160px; }
}
</style>

{% schema %}
{
  "name": "Perfume Bottle Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Velvet Perfume Collection"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Timeless Elegance"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our signature perfume collection, blending luxury with timeless elegance. Each bottle is crafted for all-day wear and effortless sophistication."
    },
    {
      "type": "color",
      "id": "bg_color_start",
      "label": "Background Gradient Start",
      "default": "#1A1A3A"
    },
    {
      "type": "color",
      "id": "bg_color_end",
      "label": "Background Gradient End",
      "default": "#2A2A5A"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#F9F9F9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#E8E0D8"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show perfume icon",
      "default": true
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "array",
      "id": "products",
      "label": "Perfume Products",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "text",
            "label": "Product Name"
          },
          "description": {
            "type": "text",
            "label": "Description"
          },
          "scent": {
            "type": "text",
            "label": "Scent"
          },
          "image": {
            "type": "image_picker",
            "label": "Product Image"
          }
        },
        "min_items": 3,
        "max_items": 6
      },
      "default": [
        {
          "name": "Velvet Velvet",
          "description": "A classic scent with a timeless elegance.",
          "scent": "Floral",
          "image": ""
        },
        {
          "name": "Midnight Rose",
          "description": "A deep, mysterious scent for nighttime allure.",
          "scent": "Oriental",
          "image": ""
        },
        {
          "name": "Sunset Blush",
          "description": "A warm, inviting scent for daytime charm.",
          "scent": "Citrus",
          "image": ""
        }
      ]
    }
  ]
}
{% endschema %}