{% comment %}
  Section: Perfume Fragrance Candle
  Description: Hero section for a scented candle with warm ambient styling.
{% endcomment %}
<div class="dawn-fragrance-section dawn-candle" data-section-id="{{ section.id }}">
  <div class="candle-hero" style="background: linear-gradient(135deg, {{ section.settings.bg_color }} 0%, {{ section.settings.bg_color_end }} 100%);">
    <div class="candle-content">
      {% if section.settings.show_icon %}
        <div class="candle-icon">{% render 'dawn-icon-candle' %}</div>
      {% endif %}
      <h2 class="candle-title">{{ section.settings.title }}</h2>
      <p class="candle-tagline">{{ section.settings.tagline }}</p>
      <div class="candle-image-wrapper">
        <img src="{{ section.settings.candle_image | img_url: '1200x1200' }}" alt="{{ section.settings.title }}" class="candle-image">
      </div>
      <p class="candle-description">{{ section.settings.description }}</p>
      <a href="{{ section.settings.cta_link }}" class="dawn-button dawn-button-gold">{{ section.settings.cta_text }}</a>
    </div>
  </div>
</div>

<style>
.dawn-candle {
  position: relative;
  overflow: hidden;
}
.candle-hero {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 2rem;
}
.candle-content {
  max-width: 700px;
  text-align: center;
  color: {{ section.settings.text_color }};
}
.candle-icon {
  margin-bottom: 1.5rem;
}
.candle-icon svg {
  width: 48px;
  height: 48px;
  stroke: #D4AF37;
}
.candle-title {
  font-family: 'Playfair Display', serif;
  font-size: 3rem;
  margin-bottom: 1rem;
  color: {{ section.settings.title_color }};
}
.candle-tagline {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  font-weight: 300;
  letter-spacing: 0.05em;
}
.candle-image-wrapper {
  margin: 2rem auto;
  max-width: 400px;
}
.candle-image {
  width: 100%;
  height: auto;
  border-radius: 12px;
  box-shadow: 0 20px 60px rgba(0,0,0,0.15);
}
.candle-description {
  font-size: 1rem;
  line-height: 1.7;
  margin: 2rem 0;
  opacity: 0.9;
}
@media (max-width: 768px) {
  .candle-title { font-size: 2rem; }
  .candle-hero { min-height: 50vh; padding: 2rem 1rem; }
}
</style>

{% schema %}
{
  "name": "Candle - Amber Glow",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Amber Glow"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Scented Candle"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "A warm, enveloping scent that transforms any space into a sanctuary of calm."
    },
    {
      "type": "image_picker",
      "id": "candle_image",
      "label": "Candle Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Gradient Start",
      "default": "#2C1810"
    },
    {
      "type": "color",
      "id": "bg_color_end",
      "label": "Background Gradient End",
      "default": "#4A2C20"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#F9F9F9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#E8E0D8"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show candle icon",
      "default": true
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Shop Candle"
    }
  ]
}
{% endschema %}